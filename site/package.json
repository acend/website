{
  "name": "acend-website",
  "version": "0.0.0",
  "description": "Thulite",
  "author": "Thulite",
  "license": "MIT",
  "scripts": {
    "create": "hugo new",
    "dev": "hugo server --disableFastRender --noHTTPCache",
    "format": "prettier **/** -w -c",
    "build": "hugo --minify --gc --noBuildLock",
    "test": "npm run -s lint",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles && npm run -s lint:markdown",
    "lint:scripts": "eslint assets/js config functions",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\" \"content/**/*.md\"",
    "lint:markdown-fix": "markdownlint-cli2-fix \"*.md\" \"content/**/*.md\"",
    "hugo-build": "exec-bin node_modules/.bin/hugo/hugo --minify --gc --noBuildLock",
    "preview": "vite preview --outDir public",
    "start": "exec-bin node_modules/.bin/hugo/hugo server --logLevel info  --bind=0.0.0.0 --disableFastRender --baseURL=http://localhost",
    "postinstall": "hugo-installer --version otherDependencies.hugo --extended --destination node_modules/.bin/hugo"
  },
  "dependencies": {
    "@swup/body-class-plugin": "^3.2.0",
    "@swup/debug-plugin": "^4.1.0",
    "@swup/head-plugin": "^2.2.0",
    "@thulite/bootstrap": "^1.2.2",
    "@thulite/images": "^3.3.3",
    "@thulite/seo": "^2.4.2",
    "flickity": "^2.3.0",
    "flickity-fade": "^1.0.0",
    "headroom.js": "^0.12.0",
    "scroll-out": "^2.2.12",
    "swup": "^4.7.0",
    "thulite": "^2.6.3",
    "eslint": "^8.8",
    "exec-bin": "^1.0.0",
    "hugo-installer": "^4.0"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "vite": "^5.2.10"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "otherDependencies": {
    "hugo": "0.152.2"
  }
}
